      <div class="sign logged display-none">
        {% if login %}
        <span id="login"> $ {{ user.email }}</span> {% else %}
        <span id="login"> $ Tên người dùng</span> {% endif %}
        <ul class="logged-box">
          <li><a href="/auth/tai-khoan">Quản lý tài khoản</a></li>
          <li><a href="/auth/don-hang">Đơn hàng của tôi</a></li>
