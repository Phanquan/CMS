{% if categories | length %}
<ul>
  <li class="menu-box"><span class="title-list">{{ widget.title | safe }}</span>
    <ul class="">
       {% for category in categories %}
      <li><a href="/products/{{ category.id }}">
        {{ category.name }} 
        {% if category.count<=0 %} 
        <span class="pull-right">(0)</span>
        {% else %}
        <span class="pull-right">
          ({{ category.count }})
        </span> {% endif %}
      </a></li>
       {% endfor %}
    </ul>
  </li>
</ul>
{% endif %}